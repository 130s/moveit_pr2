<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <node name="ompl_planning"  launch-prefix="$(arg launch_prefix)" pkg="ompl_interface_ros" type="ompl_planner" respawn="false" output="screen" args="--debug">
    <rosparam command="load" file="$(find pr2_moveit_config)/config/ompl_planning.yaml"/>
    <rosparam command="load" file="$(find pr2_moveit_config)/config/kinematics.yaml"/>
    <rosparam command="load" file="$(find pr2_moveit_config)/config/constraint_sampling.yaml"/>
  </node>
  
</launch>
